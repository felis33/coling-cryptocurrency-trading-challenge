open class MemoryConfigBase {
    db_name: String
    importance_init_val: Float(this > 0)
    decay_recency_factor: Float
    decay_importance_factor: Float(this <= 1.0)
    clean_up_recency_threshold: Float
    clean_up_importance_threshold: Float
}

class MidMemoryConfig extends MemoryConfigBase {
    jump_lower_threshold: Float(this <= 100)
    jump_upper_threshold: Float(this <= 100)
}

class ShortMemoryConfig extends MemoryConfigBase {
    jump_upper_threshold: Float(this <= 100)
}

class LongMemoryConfig extends MemoryConfigBase {
    jump_lower_threshold: Float(this <= 100)
}

class ReflectionMemoryConfig extends MemoryConfigBase {
    similarity_threshold: Float(this >= 0 && this <= 1)
}

